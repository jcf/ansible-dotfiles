setopt ALL_EXPORT

# Colour stuff
autoload colors zsh/terminfo
if [[ "$terminfo[colors]" -ge 8 ]]; then
  colors
fi
for color in RED GREEN YELLOW BLUE MAGENTA CYAN WHITE; do
  eval $color='%{$terminfo[bold]$fg[${(L)color}]%}'
  eval LIGHT_$color='%{$fg[${(L)color}]%}'
  (( count = $count + 1 ))
done
NO_COLOR="%{$terminfo[sgr0]%}"

# PS1='$LIGHT_BLUE%2c$NO_COLOR %(!.#.$) '
PS1="$LIGHT_YELLOW"

if [[ -n $SSH_CONNECTION ]]; then
  PS1="$PS1$LIGHT_YELLOW%m"
else
  PS1="$PS1$LIGHT_CYAN%m"
fi

PS1="$PS1$NO_COLOR %c%(!.#.$) "

RPS1='$LIGHT_RED$(git_info_for_prompt) $NO_COLOR!%h'

EDITOR='vim'
[ $(uname) = 'Darwin' ] && EDITOR='mvim'
GIT_EDITOR='mvim -f'
GEM_EDITOR='mvim -f'

fpath=(~/.zsh/functions $fpath)

autoload zmv
autoload -U ~/.zsh/functions/*(:t)

HISTFILE=~/.zsh_history
HISTSIZE=100000
SAVEHIST=100000

TM_BUNDLES="$HOME/Library/Application Support/TextMate/Bundles"

unsetopt ALL_EXPORT

setopt auto_cd          # lazy directory navigation
setopt nobeep
setopt autopushd pushdminus pushdsilent pushdtohome
setopt globdots
setopt no_bg_nice       # don't nice background tasks
setopt no_hup
setopt no_list_beep
setopt local_options    # allow functions to have local options
setopt local_traps      # allow functions to have local traps
setopt hist_verify
setopt share_history    # share history between sessions ???
setopt extended_history # add timestamps to history
setopt prompt_subst
setopt correct
setopt complete_in_word
setopt ignore_eof

setopt APPEND_HISTORY                   # adds history
setopt INC_APPEND_HISTORY SHARE_HISTORY # adds history incrementally and share it across sessions
setopt HIST_IGNORE_ALL_DUPS             # don't record dupes in history
setopt HIST_REDUCE_BLANKS

zle -N newtab
bindkey -e
bindkey '^[[5D' backward-word
bindkey '^[[5C' forward-word

if [[ -s "$HOME/.rvm/scripts/rvm" ]] ; then source "$HOME/.rvm/scripts/rvm" ; fi
