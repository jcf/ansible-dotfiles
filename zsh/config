setopt ALL_EXPORT

# Colour stuff
autoload colors zsh/terminfo
if [[ "$terminfo[colors]" -ge 8 ]]; then
  colors
fi
for color in RED GREEN YELLOW BLUE MAGENTA CYAN WHITE BLACK; do
  eval $color='%{$terminfo[bold]$fg[${(L)color}]%}'
  eval LIGHT_$color='%{$fg[${(L)color}]%}'
  (( count = $count + 1 ))
done
NO_COLOR="%{$terminfo[sgr0]%}"

# PS1='$LIGHT_BLUE%2c$NO_COLOR %(!.#.$) '
PS1="$LIGHT_YELLOW"

if [[ -n $SSH_CONNECTION ]]; then
  PS1="$PS1$LIGHT_YELLOW%m"
else
  PS1="$PS1$LIGHT_CYAN%m"
fi

PS1="$PS1$NO_COLOR %c%(!.#.$) "

RPS1='$LIGHT_RED$(git_info_for_prompt)$NO_COLOR $LIGHT_BLACK!%h$NO_COLOR'

EDITOR='vim'
[ $(uname) = 'Darwin' ] && EDITOR='mvim'
GIT_EDITOR='mvim -f'
GEM_EDITOR='mvim -f'

HISTFILE=~/.zsh_history
HISTSIZE=100000
SAVEHIST=100000

unsetopt ALL_EXPORT

fpath=(~/.zsh/functions $fpath)
autoload zmv
autoload -U ~/.zsh/functions/*(:t)

# smart urls
autoload -U url-quote-magic
zle -N self-insert url-quote-magic

setopt auto_cd          # lazy directory navigation
setopt nobeep
setopt autopushd
setopt pushdminus
setopt pushdsilent
setopt pushdtohome
setopt globdots
setopt no_bg_nice       # don't nice background tasks
setopt no_hup
setopt no_list_beep
setopt local_options    # allow functions to have local options
setopt local_traps      # allow functions to have local traps
setopt prompt_subst
setopt correct
setopt complete_in_word
setopt ignore_eof

setopt append_history         # adds history
setopt extended_history
setopt extended_history       # add timestamps to history
setopt hist_expire_dups_first
setopt hist_ignore_all_dups   # don't record dupes in history
setopt hist_ignore_space
setopt hist_reduce_blanks
setopt hist_verify
setopt inc_append_history     # adds history incrementally and share it across sessions
setopt share_history          # share history between sessions ???

zle -N newtab
bindkey -e
bindkey '^[[5D' backward-word
bindkey '^[[5C' forward-word
bindkey ' ' magic-space

# Find partial history matches
bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search

if [[ -s "$HOME/.rvm/scripts/rvm" ]] ; then source "$HOME/.rvm/scripts/rvm" ; fi
