if [[ $# -lt 1 ]]; then
  echo "Usage: $0 <name> [args]"
else
  local template=$DOT_FILES/ruby/rails-template

  if [[ -d $template ]]; then
    local name=$1
    shift
    if [[ -d $name ]]; then
      echo $name exists.
    else
      rails new $name -J -m $template/app.rb $@
    fi
  else
    echo $template does not exist.
  fi
fi
