# vim:set ft=ruby:

Pry.config.editor = '/usr/local/bin/mvim -f'

def quick(repetitions = 1000, &block)
  require 'benchmark'
  Benchmark.bmbm do |b|
    b.report { repetitions.times(&block) }
  end
  nil
end

begin
  load File.expand_path('~/.railsrc') if defined?(Rails) && Rails.env
rescue LoadError
end

alias q exit
