" vim: ft=vim

" Prevent UltiSnips from starting up
let did_UltiSnips_vim=1
let did_UltiSnips_vim_after=1

set nocompatible

" Load Unbundle {{{
  runtime bundle/unbundle/unbundle.vim
" }}}

" Source viminit files {{{
  runtime! config/**/*.vim
" }}}

" Basic configuration {{{
  filetype off
  syntax on
  filetype plugin indent on
" }}}

" Colour scheme {{{
  colo solarized
" }}}
