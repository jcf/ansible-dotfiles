#!/bin/sh

# Updates submodules, updates Homebrew formulae, and tells you what's changed.

updating() {
  echo "\033[33mUpdating\033[0m $@..."
}

updating "dotfiles"
cd $DOT
git update-submodules &>/dev/null
git status -s

updating "homebrew"
brew update --head &>/dev/null
brew outdated

updating "rbenv"
cd ~/.rbenv
git pull --rebase

updating "ruby-build"
cd ~/.rbenv/plugins/ruby-build
git pull --rebase

updating "rbenv ctags"
cd ~/.rbenv/plugins/rbenv-ctags
git pull --rebase

updating "rbenv readline"
cd ~/.rbenv/plugins/rbenv-readline
git pull --rebase
