host *.amazonaws.com
  User ubuntu
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/ec2_hosts

# Heroku Accounts

Host heroku.logi.cl
  HostName heroku.com
  IdentityFile ~/.ssh/identity.heroku.logi.cl
  IdentitiesOnly yes

Host heroku.beh
  HostName heroku.com
  IdentityFile ~/.ssh/identity.heroku.beh
  IdentitiesOnly yes

# vim: syn=sshconfig
